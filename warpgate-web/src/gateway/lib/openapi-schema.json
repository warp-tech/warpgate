{
  "openapi": "3.0.0",
  "info": {
    "title": "Warpgate HTTP proxy",
    "version": "0.11.0"
  },
  "servers": [
    {
      "url": "/@warpgate/api"
    }
  ],
  "tags": [],
  "paths": {
    "/auth/login": {
      "post": {
        "requestBody": {
          "content": {
            "application/json; charset=utf-8": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": ""
          },
          "401": {
            "description": "",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/LoginFailureResponse"
                }
              }
            }
          }
        },
        "operationId": "login"
      }
    },
    "/auth/otp": {
      "post": {
